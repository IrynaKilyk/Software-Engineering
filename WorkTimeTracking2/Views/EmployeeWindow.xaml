<Window x:Class="WorkTimeTracking.Views.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мій кабінет" Height="600" Width="450" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Мій кабінет" FontSize="22" FontWeight="Bold"/>
                <TextBlock x:Name="txtFullName" Text="Ім'я Прізвище (ID: #0000)" FontSize="14" Foreground="#555" Margin="0,5,0,0"/>
                <TextBlock x:Name="txtTotalHours" Text="Всього затверджено: 0 год." FontSize="14" Foreground="Green" FontWeight="Bold" Margin="0,2,0,0"/>
            </StackPanel>

            <Button Grid.Column="1" Content="Вихід" 
                    Click="Logout_Click" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF6B6B" Width="80" Height="35" VerticalAlignment="Top"/>
        </Grid>

        <Border Grid.Row="1" x:Name="StatusBorder" Background="#EEE" Padding="10" Margin="0,0,0,15" CornerRadius="5">
            <TextBlock x:Name="StatusText" Text="Завантаження статусу..." TextWrapping="Wrap" FontWeight="SemiBold" HorizontalAlignment="Center" TextAlignment="Center"/>
        </Border>

        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Color="#EEE" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Подати звіт за місяць" FontWeight="Bold" Margin="0,0,0,10"/>

                <ComboBox x:Name="cbMonth" Margin="0,0,0,10" Padding="5">
                    <ComboBoxItem Content="Січень"/>
                    <ComboBoxItem Content="Лютий"/>
                    <ComboBoxItem Content="Березень"/>
                    <ComboBoxItem Content="Квітень"/>
                    <ComboBoxItem Content="Травень"/>
                    <ComboBoxItem Content="Червень"/>
                    <ComboBoxItem Content="Липень"/>
                    <ComboBoxItem Content="Серпень"/>
                    <ComboBoxItem Content="Вересень"/>
                    <ComboBoxItem Content="Жовтень"/>
                    <ComboBoxItem Content="Листопад"/>
                    <ComboBoxItem Content="Грудень"/>
                </ComboBox>

                <TextBox x:Name="tbHoursToAdd" Style="{StaticResource ModernTextBox}" ToolTip="Введіть кількість годин"/>

                <Button x:Name="btnSend" Content="Надіслати заявку" Click="SendRequest_Click" Style="{StaticResource ModernButton}" Height="33"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="3">

            <TabItem Header="Мої заявки (Всі)">
                <ListBox x:Name="MyRequestsList" BorderThickness="0" Margin="0,5,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Month}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Hours, StringFormat={}{0} год.}" Grid.Column="1"/>
                                <TextBlock Text="{Binding Status}" Grid.Column="2" Foreground="Gray" HorizontalAlignment="Right"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <TabItem Header="Зараховано (Архів)">
                <ListBox x:Name="ApprovedHistoryList" BorderThickness="0" Margin="0,5,0,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F0FFF0" CornerRadius="5" Padding="5" Margin="0,2">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✅" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Month}" FontWeight="Bold" Width="100"/>
                                    <TextBlock Text="{Binding Hours, StringFormat={}+{0} год.}" Foreground="Green" FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

        </TabControl>
    </Grid>
</Window>