<Window x:Class="WorkTimeTracking.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новий працівник" SizeToContent="Height" Width="400" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Додавання працівника" Style="{StaticResource HeaderTitle}" FontSize="18"/>

        <TextBlock Text="Ім'я:"/>
        <TextBox x:Name="tbFirstName" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Прізвище (буде логіном):"/>
        <TextBox x:Name="tbLastName" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Посада:"/>
        <TextBox x:Name="tbPosition" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Пароль для входу:"/>
        <TextBox x:Name="tbPassword" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Години:"/>
        <TextBox x:Name="tbHours" Style="{StaticResource ModernTextBox}"/>

        <Button Content="Зберегти" Click="Add_Click" Style="{StaticResource ModernButton}" Height="33"/>
    </StackPanel>
</Window>