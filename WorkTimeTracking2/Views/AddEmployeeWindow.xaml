<Window x:Class="WorkTimeTracking.Views.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новий працівник" Height="300" Width="400" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Ім'я та прізвище працівника:" FontWeight="Bold"/>
        <TextBox x:Name="tbName" Margin="0 5 0 10" Padding="5"/>

        <TextBlock Text="Посада:" FontWeight="Bold"/>
        <TextBox x:Name="tbPosition" Margin="0 5 0 10" Padding="5"/>

        <TextBlock Text="Відпрацьовано годин:" FontWeight="Bold"/>
        <TextBox x:Name="tbHours" Margin="0 5 0 10" Padding="5"/>

        <Button Content="Зберегти"
                Style="{StaticResource PrimaryButton}"
                Margin="0 15 0 0"
                Click="Add_Click"/>
    </StackPanel>
</Window>