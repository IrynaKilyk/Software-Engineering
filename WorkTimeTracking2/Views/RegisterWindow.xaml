<Window x:Class="WorkTimeTracking.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Реєстрація" Height="472" Width="350" SizeToContent="Height" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Реєстрація співробітника" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Ім'я:"/>
        <TextBox x:Name="tbName" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Прізвище (Логін):"/>
        <TextBox x:Name="tbSurname" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Посада:"/>
        <TextBox x:Name="tbPosition" Style="{StaticResource ModernTextBox}"/>

        <TextBlock Text="Пароль:"/>
        <TextBox x:Name="tbPass" Style="{StaticResource ModernTextBox}"/>

        <Button Content="Зареєструватися" Click="Register_Click" Style="{StaticResource ModernButton}" Height="33"/>
        <Button Content="Скасувати" Click="Cancel_Click" Background="Gray" Style="{StaticResource ModernButton}" Margin="0,5" Height="33"/>
    </StackPanel>
</Window>