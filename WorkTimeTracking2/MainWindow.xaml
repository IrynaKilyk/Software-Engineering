<Window x:Class="WorkTimeTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Адміністратор - Система обліку" Height="666" Width="900" WindowStartupLocation="CenterScreen">

    <Grid Background="#FAFAFA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="56*"/>
            <ColumnDefinition Width="687*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White" Margin="0,0,0,5" Grid.ColumnSpan="3">
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" Color="#EEE" ShadowDepth="2"/>
            </Grid.Effect>
            <TextBlock Text="Панель адміністратора" VerticalAlignment="Center" Margin="20,15" FontSize="18" FontWeight="Bold" Foreground="#333"/>

            <Button Content="Вийти з системи" HorizontalAlignment="Right" Margin="20,10"
                    Style="{StaticResource ModernButton}" Background="#FF6B6B" Width="150"
                    Click="Logout_Click"/>
        </Grid>

        <TabControl Grid.Row="1" Margin="10,10,10,10" BorderThickness="0" Background="Transparent" Grid.ColumnSpan="3">

            <TabItem Header="Працівники" FontSize="20">
                <Grid Background="#FAFAFA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Background="White" Margin="6" CornerRadius="3" Padding="3">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍 Пошук:" VerticalAlignment="Center" Margin="8,0"/>
                            <TextBox x:Name="tbSearch" Width="300" Style="{StaticResource ModernTextBox}" Margin="0" 
                                    TextChanged="Search_TextChanged" ToolTip="Введіть прізвище або ID..."/>
                        </StackPanel>
                    </Border>

                    <ListBox x:Name="EmployeesList" Grid.Row="1" Margin="10,10,10,0" BorderThickness="0" Background="Transparent" Height="317" VerticalAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" Padding="10" Margin="0,0,0,5" CornerRadius="5" BorderBrush="#EEE" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Id}" FontWeight="Bold" Foreground="#888" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding FullName}" Grid.Column="1" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Position}" Grid.Column="2" Foreground="Gray" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding HoursWorked, StringFormat={}Годин: {0}}" Grid.Column="3" Foreground="Green" FontWeight="Bold" VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding StatusInfo}" Foreground="{Binding ColorStatus}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>

                                            <Button x:Name="btnActivate" Content="Активувати" 
                                                    Click="Verify_Click" Tag="{Binding}"
                                                    Background="Orange" Foreground="White" BorderThickness="0" Padding="10,5" Cursor="Hand">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsVerified}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Button Grid.Row="1" Content="Додати нового працівника вручну"
                            Style="{StaticResource ModernButton}"
                            Width="259" HorizontalAlignment="Left" Margin="23,391,0,13"
                            Click="AddEmployee_Click" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="-6.639"/>
                                <RotateTransform/>
                                <TranslateTransform X="1.084"/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                </Grid>
            </TabItem>

            <TabItem Header="Вхідні заявки" FontSize="20">
                <Grid Background="#FAFAFA">
                    <ListBox x:Name="RequestsList" Margin="10" BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#EEE" BorderThickness="1" Padding="10" Margin="5" CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Employee.FullName}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Employee.Id, StringFormat={} ({0})}" Foreground="Gray"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="За місяць: " Foreground="Gray"/>
                                                <TextBlock Text="{Binding Month}" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                                <TextBlock Text="Додати годин: " Foreground="Gray"/>
                                                <TextBlock Text="{Binding Hours}" FontWeight="SemiBold" Foreground="Blue"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Status}" Margin="0,5,0,0" Foreground="Orange"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <Button Content="✓ Схвалити" Background="#4CAF50" Foreground="White" Margin="5" Padding="8,5" BorderThickness="0"
                                                    Click="Approve_Click" Tag="{Binding}" Cursor="Hand"/>
                                            <Button Content="X Відхилити" Background="#F44336" Foreground="White" Margin="5" Padding="8,5" BorderThickness="0"
                                                    Click="Reject_Click" Tag="{Binding}" Cursor="Hand"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>